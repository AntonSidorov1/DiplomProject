<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SessionsActivity">
    <TextView
        android:id="@+id/SessionAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ApiNameRus"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"  />
    <Button
        android:id="@+id/button13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Back"
        android:onClick="Exit"/>

    <Button
        android:id="@+id/button19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Update"
        android:onClick="UpdateSessions_Click" />

    <TextView
        android:id="@+id/textViewSessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сессии"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Закрыть все сессии"
        android:onClick="CloseAll_Click"/>

    <ListView
        android:id="@+id/listViewSessions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>